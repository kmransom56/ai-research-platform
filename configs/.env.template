# AI Research Platform - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# AZURE OPENAI CONFIGURATION
# ===========================================
AZURE_OPENAI_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
POSTGRES_DB=ai_platform
POSTGRES_USER=ai_platform_user
POSTGRES_PASSWORD=secure-postgres-password

RABBITMQ_USER=ai_platform
RABBITMQ_PASSWORD=secure-rabbitmq-password

# ===========================================
# SERVICE SECURITY
# ===========================================
OPENWEBUI_SECRET_KEY=your-openwebui-secret-key
VSCODE_PASSWORD=your-vscode-password
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# ===========================================
# OPTIONAL: TAILSCALE CONFIGURATION
# ===========================================
TAILSCALE_AUTHKEY=your-tailscale-auth-key
TAILSCALE_HOSTNAME=ai-research-platform

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=300
FAILURE_THRESHOLD=3
LOG_RETENTION_DAYS=7

# ===========================================
# DEVELOPMENT OVERRIDES
# ===========================================
NODE_ENV=production
ASPNETCORE_ENVIRONMENT=Production
PYTHONPATH=/app