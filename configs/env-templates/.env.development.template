# Development Environment Configuration
# Copy this file to .env.development and fill in your development values

# =============================================================================
# AI SERVICE API KEYS (Development)
# =============================================================================

# OpenAI Configuration (use your own development keys)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (optional for development)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2048

# Azure OpenAI Configuration (optional)
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-dev-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google AI Configuration (optional)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LangChain Configuration (optional)
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=ai-research-platform-dev

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================

# Neo4j Configuration (development defaults)
NEO4J_URI=bolt://localhost:7474
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=development_password
NEO4J_DATABASE=neo4j

# PostgreSQL Configuration (development defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatcopilot_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=development_password

# =============================================================================
# MESSAGE QUEUE CONFIGURATION (Development)
# =============================================================================

# RabbitMQ Configuration (development defaults)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=dev_user
RABBITMQ_PASSWORD=development_password
RABBITMQ_VHOST=/dev

# =============================================================================
# APPLICATION CONFIGURATION (Development)
# =============================================================================

# Environment
NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development
PYTHON_ENV=development

# Logging (verbose for development)
LOG_LEVEL=debug
ENABLE_DEBUG_LOGGING=true

# Security (relaxed for development)
OPENWEBUI_SECRET_KEY=development_secret_key_not_secure
VSCODE_PASSWORD=development_password
JWT_SECRET=development_jwt_secret_not_secure
ENCRYPTION_KEY=development_encryption_key_not_secure

# GitHub Integration (use personal access token)
GH_TOKEN=your_github_personal_access_token_here

# =============================================================================
# SERVICE PORTS (Development - same as production)
# =============================================================================

# Core Services
WEBAPI_PORT=11000
WEBAPP_PORT=3000
AUTOGEN_STUDIO_PORT=11001
GRAFANA_PORT=11002
MAGENTIC_ONE_PORT=11003
WINDMILL_PORT=11005

# AI Stack Services (may not be enabled in development)
VLLM_DEEPSEEK_R1_PORT=8000
VLLM_MISTRAL_SMALL_PORT=8001
VLLM_DEEPSEEK_CODER_PORT=8002
OOBABOOGA_WEBUI_PORT=7860
OOBABOOGA_API_PORT=5000
KOBOLDCPP_PORT=5001
AI_STACK_GATEWAY_PORT=9000

# Database Services
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
POSTGRES_SERVICE_PORT=5432
RABBITMQ_SERVICE_PORT=5672

# Monitoring Services
PROMETHEUS_PORT=9090
GRAFANA_SERVICE_PORT=3001

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================

# AI Stack Features (may be disabled for development)
ENABLE_VLLM=false
ENABLE_OOBABOOGA=false
ENABLE_KOBOLDCPP=false
ENABLE_AI_GATEWAY=false

# Monitoring Features
ENABLE_PROMETHEUS=true
ENABLE_GRAFANA=true
ENABLE_HEALTH_CHECKS=true

# Security Features (relaxed for development)
ENABLE_HTTPS=false
ENABLE_AUTH=false
REQUIRE_API_KEY=false

# =============================================================================
# RESOURCE LIMITS (Development - Reduced)
# =============================================================================

# Memory Limits (reduced for development)
NEO4J_HEAP_SIZE=1g
NEO4J_PAGECACHE_SIZE=512m
VLLM_GPU_MEMORY=4g
OOBABOOGA_MAX_MEMORY=2g

# Connection Limits (reduced for development)
MAX_DATABASE_CONNECTIONS=10
MAX_RABBITMQ_CONNECTIONS=5

# =============================================================================
# EXTERNAL INTEGRATIONS (Development)
# =============================================================================

# Local Development
TAILSCALE_HOSTNAME=localhost
TAILSCALE_PORT=8080

# SSL Configuration (disabled for development)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# =============================================================================
# BACKUP AND RECOVERY (Development)
# =============================================================================

# Backup Configuration (minimal for development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 6 * * 0"
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups/

# Recovery Configuration
AUTO_RECOVERY=false
HEALTH_CHECK_INTERVAL=300

# =============================================================================
# PERFORMANCE TUNING (Development)
# =============================================================================

# Worker Configuration (minimal for development)
WORKER_PROCESSES=1
MAX_WORKER_CONNECTIONS=100
WORKER_TIMEOUT=60

# Cache Configuration (minimal for development)
REDIS_CACHE_TTL=300
MEMORY_CACHE_SIZE=128m

# Request Limits (relaxed for development)
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=60s

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================

# Hot Reload
ENABLE_HOT_RELOAD=true
WATCH_FILES=true

# Debug Features
ENABLE_PROFILING=true
ENABLE_QUERY_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# Test Configuration
RUN_TESTS_ON_START=false
TEST_DATABASE_NAME=chatcopilot_test
ENABLE_TEST_ENDPOINTS=true