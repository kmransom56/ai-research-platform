{
  "dashboard": {
    "id": null,
    "title": "AI Network Management - Unified Dashboard",
    "tags": ["network", "ai", "meraki", "fortinet"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "organization",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(network_device_info, organization)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "platform",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all", "selected": true},
            {"text": "Meraki", "value": "meraki", "selected": false},
            {"text": "Fortinet", "value": "fortinet", "selected": false}
          ],
          "multi": true,
          "includeAll": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Network Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "network_alert_active == 1",
          "iconColor": "red",
          "titleFormat": "{{alert_type}}: {{device_name}}",
          "textFormat": "{{description}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Network Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(network_device_info{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Total Devices",
            "refId": "A"
          },
          {
            "expr": "count(network_device_info{status=\"online\", organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Online Devices",
            "refId": "B"
          },
          {
            "expr": "count(network_device_info{status=\"offline\", organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Offline Devices", 
            "refId": "C"
          },
          {
            "expr": "avg(network_device_health_score{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Avg Health Score",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "color": {"mode": "palette-classic"},
            "custom": {
              "displayMode": "list",
              "orientation": "horizontal"
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Platform Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "count by (platform) (network_device_info{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "{{platform}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "bottom"
          },
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 3,
        "title": "Device Type Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "targets": [
          {
            "expr": "count by (device_type) (network_device_info{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "{{device_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "bottom"
          },
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 4,
        "title": "Health Score Distribution",
        "type": "histogram",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "targets": [
          {
            "expr": "network_device_health_score{organization=~\"$organization\", platform=~\"$platform\"}",
            "legendFormat": "Health Score",
            "refId": "A"
          }
        ],
        "options": {
          "bucketSize": 10,
          "bucketOffset": 0,
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 5,
        "title": "Network Health Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "avg(network_device_health_score{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Average Health Score",
            "refId": "A"
          },
          {
            "expr": "avg(network_device_uptime_score{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Average Uptime Score",
            "refId": "B"
          },
          {
            "expr": "avg(network_device_performance_score{organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "Average Performance Score",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "color": {"mode": "palette-classic"},
            "unit": "percent"
          }
        },
        "options": {
          "tooltip": {"mode": "single"},
          "legend": {
            "displayMode": "visible",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Critical Alerts",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "network_alert_active{severity=\"critical\", organization=~\"$organization\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "Value": true},
              "indexByName": {},
              "renameByName": {
                "alert_id": "Alert ID",
                "device_name": "Device",
                "alert_type": "Type",
                "description": "Description",
                "location": "Location"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Alert ID", "desc": true}]
        }
      },
      {
        "id": 7,
        "title": "Device Status by Location",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "count by (location) (network_device_info{status=\"online\", organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "{{location}} - Online",
            "refId": "A"
          },
          {
            "expr": "count by (location) (network_device_info{status=\"offline\", organization=~\"$organization\", platform=~\"$platform\"})",
            "legendFormat": "{{location}} - Offline",
            "refId": "B"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            },
            "color": {"mode": "thresholds"},
            "custom": {
              "orientation": "horizontal",
              "displayMode": "gradient",
              "minVizWidth": 0,
              "minVizHeight": 10
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Network Traffic Overview",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(network_interface_bytes_total{organization=~\"$organization\"}[5m])) by (direction)",
            "legendFormat": "{{direction}} Traffic",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            },
            "color": {"mode": "palette-classic"},
            "unit": "bps"
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {
            "displayMode": "visible",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "title": "Security Events (Fortinet)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "increase(fortinet_security_events_total[5m])",
            "legendFormat": "Security Events",
            "refId": "A"
          },
          {
            "expr": "increase(fortinet_blocked_threats_total[5m])",
            "legendFormat": "Blocked Threats",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "mappings": [],
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Top 10 Devices by Alert Count",
        "type": "bargauge", 
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "topk(10, sum by (device_name) (network_alert_count{organization=~\"$organization\"}))",
            "legendFormat": "{{device_name}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "vertical",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "color": {"mode": "thresholds"},
            "custom": {
              "orientation": "vertical",
              "displayMode": "gradient"
            }
          }
        }
      }
    ]
  }
}